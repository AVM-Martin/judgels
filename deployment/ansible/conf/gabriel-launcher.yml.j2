configType: java
configVersion: 1
jvmOpts:
{% if gabriel_xmx is defined %}
  - -Xmx{{ gabriel_xmx }}
{% endif %}
  - -XX:+HeapDumpOnOutOfMemoryError
  - -XX:HeapDumpPath=/judgels/gabriel/var/log
  - -Dcom.sun.management.jmxremote.port=9207
  - -Dcom.sun.management.jmxremote.rmi.port=9207
  - -Dcom.sun.management.jmxremote.ssl=false
  - -Dcom.sun.management.jmxremote.authenticate=false
  - -Dcom.sun.management.jmxremote.local.only=false
  - -Djava.rmi.server.hostname=localhost
