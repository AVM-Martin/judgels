configType: java
configVersion: 1
jvmOpts:
{% if jerahmeel_xmx is defined %}
  - -Xmx{{ jerahmeel_xmx }}
{% endif %}
  - -XX:+HeapDumpOnOutOfMemoryError
  - -XX:HeapDumpPath=/judgels/jerahmeel/var/log
  - -Dcom.sun.management.jmxremote.port=9205
  - -Dcom.sun.management.jmxremote.rmi.port=9205
  - -Dcom.sun.management.jmxremote.ssl=false
  - -Dcom.sun.management.jmxremote.authenticate=false
  - -Dcom.sun.management.jmxremote.local.only=false
  - -Djava.rmi.server.hostname=localhost
