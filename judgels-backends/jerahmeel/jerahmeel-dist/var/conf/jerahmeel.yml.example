server:
  applicationConnectors:
    - type: http
      port: 9005
  adminConnectors:
    - type: http
      port: 9015
  requestLog:
    appenders:
    - type: file
      currentLogFilename: var/log/jerahmeel-request.log
      archivedLogFilenamePattern: var/log/jerahmeel-request-%d.log.gz
      archivedFileCount: 14

database:
  driverClass: com.mysql.jdbc.Driver
  url: jdbc:mysql://localhost/judgels?useSSL=false
  user: judgels
  password: judgels
  properties:
    charSet: UTF-8
    hibernate.dialect: org.hibernate.dialect.MySQL8Dialect
    hibernate.generate_statistics: false
    hibernate.query.plan_cache_max_size: 64
    hibernate.query.plan_parameter_metadata_max_size: 32

logging:
  appenders:
    - type: console
      threshold: INFO
    - type: file
      currentLogFilename: var/log/jerahmeel.log
      archivedLogFilenamePattern: var/log/jerahmeel-%d.log.gz
      archivedFileCount: 14

  loggers:
    org.hibernate.type.BasicTypeRegistry:
      level: OFF

webSecurity:
  cors:
    allowedOrigins: "*"

jerahmeel:
  baseDataDir: var/data

  jophiel:
    baseUrl: http://localhost:9001

  sandalphon:
    baseUrl: http://localhost:9002
    clientJid: JIDSACL-jerahmeel-local
    clientSecret: sandalphon-local

  uriel:
    baseUrl: http://localhost:9004

  grader:
    gradingRequestQueueName: gabriel-grading-request
    gradingResponseQueueName: jerahmeel-grading-response

  rabbitmq:
    host: localhost
    port: 5672
    username: guest
    password: guest
    virtualHost: "/"

  aws:
    accessKey: xxx
    secretKey: xxx
    s3BucketRegionId: ap-southeast-1

  submission:
    fs:
      type: local

  stats:
    enabled: false
